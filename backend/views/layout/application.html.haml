%html
  %head
    %title Lots of words
    %style{ :type => 'text/css' }
      :plain
        html { font-family: helvetica; }
        
        .big {
          font-size: 60pt;
          float: left;
          clear: both;
        }
        
        .photos {
          padding-top: 1em;
          float: right;
          clear: right;
        }

    %script{ :src => "http://www.google.com/jsapi" }

    %script{ :type => 'text/javascript' }
      :plain
        google.load("jquery", "1.2.6");

        google.setOnLoadCallback(function() {
          #{ catch_content :for_javascript if thrown_content? :for_javascript }
        })

  %body
    #container
      = catch_content :for_layout
      
      / #comments
      /   Leave some feedback!
      /   
      /   %form{ :action => '/feedbacks', :method => 'post' }
      /     %input{ :name => 'uri', :type => 'hidden', :value => request.uri }
      /     %textarea{ :name => 'comment', :rows => 5, :cols => '70' }
      /     %br
      /     %input{ :type => 'submit' }